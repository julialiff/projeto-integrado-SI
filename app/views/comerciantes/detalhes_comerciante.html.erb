<div class="container form-box dados-usuario-container">
  <div class="row justify-content-center">
    <div class="col col-8 align-self-center">
      <%= render partial: "users/partials/admin_navbar" %>
      <br />
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col col-6 align-self-center">
      <h4>Detalhes Vendedor</h4>
    </div>
    <div class="col col-2 align-self-center">
      <%= link_to '< Voltar', :back, class: 'link_voltar' %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col col-8">
      <div class="card mb-4 shadow-sm">
        <div class="card-header">
          <%= @comerciante.nome.partition(" ").first %> - <%= @comerciante.id %>
        </div>
        <div class="card-body" style="font-size:14px;">

          <table class="table border border-rounded" style="width:100%;">
            <tr>
              <td>
                Nome: <strong><%= @comerciante.nome %></strong>
              </td>
              <td>
                E-mail: <strong><%= @comerciante.email %></strong>
              </td>
            </tr>
            <tr>
              <td>Documento: <strong><%= @comerciante.documento %></strong></td>
              <td>Data de criação: <strong><%= @comerciante.created_at %></strong></td>
            </tr>
            # TODO opção para ativar/desativar. Link para os produtos deste vendedor

          </table>
        </div>
      </div>
    </div>
  </div>
</div>