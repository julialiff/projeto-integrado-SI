<div class="container form-box">
  <div class="row justify-content-center">
    <div class="col col-4 align-self-center">
      <h2>Cadastro de vendedor</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "comerciantes/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, 'E-mail', class: 'form-text' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'vendedor@email.com', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :nome, 'Nome', class: 'form-text' %>
          <%= f.text_field :nome, autofocus: true, autocomplete: "name", class: 'form-control', placeholder: 'Nome da loja/vendedor', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :documento, 'Documento (CPF ou CNPJ)', class: 'form-text' %>
          <%= f.text_field :documento, autofocus: true, autocomplete: "document", class: 'form-control', placeholder: 'CPF/CNPJ', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :password, 'Senha', class: 'form-text' %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Senha', required: true %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirme a senha", class: 'form-text' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Senha', required: true %>
        </div>

        <div class="actions">
          <%= f.submit "Cadastrar", class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>

      <%= render "comerciantes/shared/links" %>
    </div>
  </div>
</div>
