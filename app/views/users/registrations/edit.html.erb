<div class="container form-box">
  <div class="row justify-content-center">
    <div class="col col-4 align-self-center">
      <h2>Editar Cadastro</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :nome, 'Nome', class: 'form-text' %>
            <%= f.text_field :nome, autofocus: true, class: 'form-control', required: true, value: current_user.nome %>
          </div>

          <div class="form-group">
            <%= f.label :email, class: 'form-text' %>
            <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: 'email@exemplo.com', required: true %>

          </div>
          
          <div class="form-group">
            <%= f.label :documento, 'CPF', class: 'form-text' %>
            <%= f.text_field :documento, autocomplete: "cpf", class: 'form-control', value: current_user.documento, disabled: true %>
          </div>

          <div class="form-group">
            <%= f.label :data_nascimento, 'Data de Nascimento', class: 'form-text' %>
            <%= f.text_field :data_nascimento, autocomplete: "birthday", class: 'form-control', required: true, value: current_user.data_nascimento, disabled: true %>
          </div>

          <div class="field">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Update" %>
          </div>
        <% end %>

        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back %>
          
    </div>
  </div>
</div>

        