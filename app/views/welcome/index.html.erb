<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <!-- <title>vitrine</title> -->
    <%= stylesheet_link_tag 'welcome.scss' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<body data-new-gr-c-s-check-loaded='14.991.0' data-gr-ext-installed>
	<div>
		<div class="row justify-content-center" style="margin-bottom:20px;">
		<div class="col col-8 align-self-center">
		<%= render partial: "products/partials/search" %>
		</div>
  </div>
	</div>
    
 <!-- Vitrine -->
    <div class="small-container">
        <h2 class="title"> Vitrine </h2>
    </div>

	
	<table>
		<tbody>
			<% @products.each do |product| %>
			<tr>
				<td style="line-height: 20px; padding-bottom: 30px;">
					<% if product.foto.attached? %>
					  <img src="<%=(url_for(product.foto))%>" style="width:200px;">
					<% else %>
					  <i class="fas fa-image" style="font-size: 200px; color:#bfbfbf"></i>
					<% end %>
				</td>
				<td style="padding-left: 30px; line-height: 22px;">
					Nome: <%= product.nome %><br>
					Categoria: <%= @categories[product.category_id] %><br>
					Descrição: <%= product.descricao %><br>
					Quantidade: <%= product.quantidade %><br>
					Preço: R$<%= product.preco %><br>
					Vendedor: <%= @comerciante[product.comerciante_id] %><br>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</body>
</html>
